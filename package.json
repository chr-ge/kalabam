{
  "name": "kalabam",
  "private": true,
  "workspaces": [
    "app",
    "theme",
    "website"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chr-ge/kalabam.git"
  },
  "author": "chr-ge <george@chr-ge.com> (https://chr-ge.com/)",
  "description": "Multiplayer Games for Class Activities or Interactive Presentations",
  "homepage": "https://github.com/chr-ge/kalabam#readme",
  "scripts": {
    "build": "lerna run build --ignore @kalabam/theme --stream",
    "lint": "lerna run lint --stream",
    "lint-fix": "lerna run lint-fix --stream",
    "test": "lerna run test --stream",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "dedup": "yarn-deduplicate --strategy highest yarn.lock",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "1.8.6",
    "@emotion/react": "11.8.2",
    "@emotion/styled": "11.8.1",
    "@fontsource-variable/grandstander": "5.0.19",
    "@fontsource-variable/rubik": "5.0.20",
    "@harelpls/use-pusher": "7.2.1",
    "@kalabam/theme": "^1.0.0",
    "framer-motion": "6.2.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "4.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "babel-jest": "27.5.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lerna": "3.22.1",
    "lint-staged": "12.3.5",
    "prettier": "2.5.1",
    "yarn-deduplicate": "3.1.0"
  }
}
